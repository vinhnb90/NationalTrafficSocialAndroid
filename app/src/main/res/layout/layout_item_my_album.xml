<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_image_grid_recycle"
    android:layout_marginLeft="@dimen/spacing_0_2dp"
    android:layout_marginRight="@dimen/spacing_0_2dp"
    android:layout_marginTop="@dimen/spacing_0_4dp"
    android:elevation="@dimen/spacing_0_4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_my_album"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_name_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imv_my_album"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textSize="@dimen/text_1_10sp" />

        <TextView
            android:id="@+id/tv_number_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_name_album"
            android:padding="@dimen/spacing_1_8dp"
            android:textSize="@dimen/text_0_8sp" />

        <com.vn.ntsc.widget.views.textview.TextViewVectorCompat
            android:id="@+id/imv_privacy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_3_24dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_name_album"
            app:drawableCompatLeft="@drawable/ic_small_privacy_public_24dp_gray"
            app:drawableCompatRight="@drawable/ic_small_arrow_drop_down" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
