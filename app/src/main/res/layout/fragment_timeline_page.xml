<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_timeline_page_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app">

    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_timeline_page_tab_layout"
        app:tabTextAppearance="@style/AppTabTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/textColor" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_timeline_page_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_timeline_page_tab_layout"
        android:layout_marginTop="@dimen/spacing_0_2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_0_4dp"
        android:layout_below="@+id/fragment_timeline_page_tab_layout"
        android:background="@drawable/shadow_top" />

</RelativeLayout>