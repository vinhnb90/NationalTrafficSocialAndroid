<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_1_8dp"
    app:cardElevation="0dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_2_16dp"
        android:layout_marginLeft="@dimen/spacing_8_64dp"
        android:layout_marginRight="@dimen/spacing_8_64dp"
        android:layout_marginTop="@dimen/spacing_2_16dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/common_sign_up"
            android:textColor="@color/link_color" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_2_16dp"
            android:text="@string/common_login"
            android:textColor="@color/link_color" />
        
    </LinearLayout>
</android.support.v7.widget.CardView>