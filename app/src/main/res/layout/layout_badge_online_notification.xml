<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_badge_online_notification"
        android:layout_width="@dimen/bottom_navigation_notification_height"
        android:layout_height="@dimen/bottom_navigation_notification_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_0_2dp"
        android:background="@drawable/bg_bagde"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/bottom_navigation_notification_text_size"/>

</RelativeLayout>


