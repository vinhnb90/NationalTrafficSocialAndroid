<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_list_push_media"
    android:layout_height="@dimen/item_list_push_media"
    android:layout_margin="2dp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/thumbnail_picked_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_images"/>


        <CheckBox
            android:id="@+id/iv_check_box"
            android:layout_width="@dimen/check_box_gird_item"
            android:layout_height="@dimen/check_box_gird_item"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="#000000"
            android:padding="@dimen/spacing_2_16dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>