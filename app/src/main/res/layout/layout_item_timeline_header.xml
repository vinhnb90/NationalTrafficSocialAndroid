<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_timeline_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">

    <com.vn.ntsc.widget.views.images.RecyclingImageView
        android:id="@+id/item_timeline_header_event"
        android:layout_width="@dimen/ic_favorite"
        android:layout_height="@dimen/ic_favorite"
        android:layout_margin="@dimen/spacing_1_8dp"
        android:src="@color/default_image_loading"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_1_8dp"
        android:layout_marginStart="@dimen/spacing_1_8dp"
        android:layout_marginEnd="@dimen/spacing_0_4dp"
        android:layout_marginTop="@dimen/spacing_1_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_timeline_header_event"
        app:layout_constraintTop_toTopOf="parent">

        <com.vn.ntsc.widget.views.images.RecyclingImageView
            android:id="@+id/item_timeline_avatar"
            android:layout_width="@dimen/timeline_avatar"
            android:layout_height="@dimen/timeline_avatar"
            android:background="@color/transparent"
            android:src="@drawable/ic_avatar_circle_male_border" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_timeline_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_1_8dp"
            android:maxLines="2"
            android:textColorLink="@color/black"
            android:textSize="@dimen/text_3_14sp"
            app:layout_constraintLeft_toRightOf="@+id/item_timeline_avatar"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_timeline_date_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_1_8dp"
            android:layout_marginTop="@dimen/spacing_0_2dp"
            android:maxLines="1"
            android:textSize="@dimen/text_1_10sp"
            app:layout_constraintLeft_toRightOf="@+id/item_timeline_avatar"
            app:layout_constraintTop_toBottomOf="@+id/item_timeline_username" />

        <com.vn.ntsc.widget.views.images.RecyclingImageView
            android:id="@+id/item_timeline_icon_status_private"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/spacing_0_2dp"
            app:layout_constraintLeft_toRightOf="@+id/item_timeline_date_post"
            app:layout_constraintTop_toBottomOf="@+id/item_timeline_username" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>