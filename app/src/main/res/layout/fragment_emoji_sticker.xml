<?xml version="1.0"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/fragment_emoji_sticker_emoji_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_border_view_emoji"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_emoji_sticker_btn_emoji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/spacing_1_8dp"
                android:paddingTop="@dimen/spacing_1_8dp"
                android:text="@string/common_symbol" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/default_app"
                android:gravity="center" />


            <TextView
                android:id="@+id/fragment_emoji_sticker_btn_sticker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/spacing_1_8dp"
                android:paddingTop="@dimen/spacing_1_8dp"
                android:text="@string/common_sticker" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_emoji_sticker_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_0_2dp"
        android:orientation="vertical" />

</LinearLayout>