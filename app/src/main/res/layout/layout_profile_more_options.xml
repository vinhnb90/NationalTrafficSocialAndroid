<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_1_8dp">

        <LinearLayout
            android:layout_margin="@dimen/spacing_1_8dp"
            android:id="@+id/menu_more_gift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/menu_more_icon_size"
                android:layout_height="@dimen/menu_more_icon_size"
                android:src="@drawable/ic_submenu_cake" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/common_send_gift"
                android:textColor="@color/black"
                android:textSize="@dimen/text_2_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/spacing_1_8dp"
            android:id="@+id/menu_more_favorite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="@dimen/menu_more_icon_size"
                android:layout_height="@dimen/menu_more_icon_size"
                android:src="@drawable/ic_submenu_favorite_outline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/common_favorite"
                android:textColor="@color/black"
                android:textSize="@dimen/text_2_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/spacing_1_8dp"
            android:id="@+id/menu_more_interested"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/menu_more_icon_size"
                android:layout_height="@dimen/menu_more_icon_size"
                android:src="@drawable/ic_submenu_not_interested" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/common_block"
                android:textColor="@color/black"
                android:textSize="@dimen/text_2_12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_1_8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_margin="@dimen/spacing_1_8dp"
            android:id="@+id/menu_more_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/menu_more_icon_size"
                android:layout_height="@dimen/menu_more_icon_size"
                android:src="@drawable/ic_submenu_info_outline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/common_report"
                android:textColor="@color/black"
                android:textSize="@dimen/text_2_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/spacing_1_8dp"
            android:id="@+id/menu_more_online_alert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/menu_more_icon_size"
                android:layout_height="@dimen/menu_more_icon_size"
                android:src="@drawable/ic_submenu_social_notifications_none" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/nv_online_alarm"
                android:textColor="@color/black"
                android:textSize="@dimen/text_2_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/spacing_1_8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color" />
</LinearLayout>