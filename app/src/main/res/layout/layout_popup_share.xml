<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popup_like"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup_share"
    android:orientation="vertical"
    android:padding="@dimen/spacing_2_16dp">

    <TextView
        android:id="@+id/layout_popup_share_wall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_1_8dp"
        android:paddingTop="@dimen/spacing_1_8dp"
        android:text="@string/share_wall"
        android:textSize="@dimen/text_4_medium_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/layout_popup_share_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_1_8dp"
        android:paddingTop="@dimen/spacing_1_8dp"
        android:text="@string/share_facebook"
        android:textSize="@dimen/text_4_medium_16sp" />

</LinearLayout>