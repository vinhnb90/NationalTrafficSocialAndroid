<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_6_default_48dp">

    <View style="@style/all_style_divider"/>

    <RelativeLayout
        android:id="@+id/web_view_navigation_bar_rlt_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_6_default_48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="@dimen/spacing_0_4dp">

        <ImageView
            android:id="@+id/web_view_navigation_bar_back"
            android:layout_width="@dimen/spacing_3_24dp"
            android:layout_height="@dimen/spacing_3_24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_margin="@dimen/spacing_0_4dp"
            app:srcCompat="@drawable/ic_chevron_left_gray_24dp"/>

        <ImageView
            android:id="@+id/web_view_navigation_bar_forward"
            android:layout_width="@dimen/spacing_3_24dp"
            android:layout_height="@dimen/spacing_3_24dp"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_margin="@dimen/spacing_0_4dp"
            android:layout_toRightOf="@id/web_view_navigation_bar_back"
            app:srcCompat="@drawable/ic_chevron_right_gray_24dp"/>

        <ImageView
            android:id="@+id/web_view_navigation_bar_refresh"
            android:layout_width="@dimen/spacing_3_24dp"
            android:layout_height="@dimen/spacing_3_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing_0_4dp"
            app:srcCompat="@drawable/ic_refresh_gray_24dp"/>

        <ImageView
            android:id="@+id/web_view_navigation_bar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing_0_4dp"
            android:layout_toLeftOf="@id/web_view_navigation_bar_refresh"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_home_gray_24dp"/>

    </RelativeLayout>

</RelativeLayout>