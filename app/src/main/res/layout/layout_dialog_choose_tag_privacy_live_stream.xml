<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tag_privacy_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rel_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/message_item_avatar_size"
            android:layout_height="@dimen/message_item_avatar_size"
            android:layout_marginTop="@dimen/spacing_1_8dp"
            android:layout_marginStart="@dimen/spacing_1_8dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar_circle_male_border"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_tag_friend_with_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_1_8dp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/img_avatar"
            app:layout_constraintLeft_toRightOf="@+id/img_avatar"
            app:layout_constraintTop_toTopOf="@+id/img_avatar" />

        <RelativeLayout
            android:id="@+id/activity_live_stream_layout_private"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_1_8dp"
            android:layout_marginTop="@dimen/spacing_1_8dp"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@+id/img_avatar"
            app:layout_constraintTop_toBottomOf="@+id/txt_tag_friend_with_me">

            <ImageView
                android:id="@+id/activity_live_stream_private_icon"
                android:layout_width="@dimen/status_layout_private_icon_size"
                android:layout_height="@dimen/status_layout_private_icon_size"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_public" />

            <TextView
                android:id="@+id/activity_live_stream_private_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/spacing_1_8dp"
                android:layout_toEndOf="@+id/activity_live_stream_private_icon"
                android:text="@string/public_status"
                android:textSize="@dimen/text_2_12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_layout_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_1_8dp"
            android:layout_marginTop="@dimen/spacing_1_8dp"
            android:gravity="start|center_vertical"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_avatar"
            app:layout_constraintTop_toBottomOf="@+id/img_avatar">

            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:textColor="@color/colorGray"
                android:text="@string/live_stream_what_your_mind"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_item_header_live_stream_tag_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_1_8dp"
            android:visibility="visible"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rel_layout_comment">

            <ImageView
                android:id="@+id/item_header_live_stream_tag_friends"
                android:layout_width="@dimen/icon_tag_friend_live_stream"
                android:layout_height="@dimen/icon_tag_friend_live_stream"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_tag_friends" />
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>

