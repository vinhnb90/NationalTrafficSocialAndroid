<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.vn.ntsc.widget.toolbar.ToolbarTitleCenter
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:text_right="@string/common_save"
        app:text_title="@string/title_fragment_area"
        app:type_button_right="text" />

    <RelativeLayout
        android:id="@+id/activity_choose_area_btn_choose_each_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/activity_choose_area_txt_choose_each_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/spacing_1_8dp"
            android:padding="@dimen/spacing_2_16dp"
            android:text="@string/choose_each_area"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_3_14sp" />

        <RadioButton
            android:id="@+id/activity_choose_area_radio_choose_each_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/spacing_2_16dp"
            android:button="@drawable/ic_custom_checkbox"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/activity_choose_area_btn_choose_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/activity_choose_area_txt_choose_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/spacing_1_8dp"
            android:padding="@dimen/spacing_2_16dp"
            android:text="@string/choose_all"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/text_3_14sp" />

        <RadioButton
            android:id="@+id/activity_choose_area_radio_choose_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/spacing_2_16dp"
            android:button="@drawable/ic_custom_checkbox"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color" />

</LinearLayout>
