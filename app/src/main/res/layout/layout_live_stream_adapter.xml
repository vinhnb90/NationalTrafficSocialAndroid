<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/comment_width_live_stream"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent_60_radius"
    android:padding="@dimen/spacing_0_4dp">

    <ImageView
        android:id="@+id/live_stream_avatar"
        android:layout_width="@dimen/avatar_comment"
        android:layout_height="@dimen/avatar_comment"
        android:contentDescription="TODO"
        android:src="@drawable/ic_avatar_circle_male_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/live_stream_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_0_4dp"
        android:layout_marginRight="@dimen/spacing_0_4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_3_14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/live_stream_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/live_stream_avatar" />

    <TextView
        android:id="@+id/live_stream_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_0_4dp"
        android:layout_marginRight="@dimen/spacing_0_4dp"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_2_12sp"
        app:layout_constraintLeft_toRightOf="@+id/live_stream_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/live_stream_avatar"
        app:layout_constraintTop_toBottomOf="@+id/live_stream_user_name" />

</android.support.constraint.ConstraintLayout>