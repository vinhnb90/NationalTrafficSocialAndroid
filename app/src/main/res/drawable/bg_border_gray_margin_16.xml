<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Apply the margin value on the "item" element -->
    <!-- This example creates a 15dp visible margin around the dialog -->
    <item
        android:bottom="@dimen/spacing_1_8dp"
        android:left="@dimen/spacing_1_8dp"
        android:right="@dimen/spacing_1_8dp"
        android:top="@dimen/spacing_1_8dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/spacing_1_8dp" />
            <stroke
                android:width="@dimen/line"
                android:color="@color/gray" />
        </shape>
    </item>
</layer-list>